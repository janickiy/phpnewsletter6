{% extends 'templates/app.twig' %}

{% block content %}

    <div class="row-fluid">
        <div class="col">

            <!-- Widget ID (each widget will need unique ID)-->
            <div class="jarviswidget jarviswidget-color-blueDark" data-widget-editbutton="false">

                <!-- widget div-->
                <div>

                    <form action="{{ path_for('admin.subscribers.export_subscribers') }}" method="POST" class="smart-form">

                        <fieldset>

                            <section>
                                <label for="export_type" class="label">Формат</label>
                                <div class="inline-group">
                                    <label class="radio">
                                        <input type="radio" name="export_type" value="text" checked="checked">
                                        <i></i>Текст
                                    </label>
                                    <label class="radio">
                                        <input type="radio" name="export_type" value="excel">
                                        <i></i>MS Excel
                                    </label>
                                </div>
                            </section>

                            <section>
                                <label for="compress" class="label">Упаковать</label>
                                <div class="inline-group">
                                    <label class="radio">
                                        <input type="radio" name="compress" value="none" checked="checked">
                                        <i></i>нет
                                    </label>
                                    <label class="radio">
                                        <input type="radio" name="compress" value="zip">
                                        <i></i>zip
                                    </label>
                                </div>
                            </section>

                            <section>
                                <label for="categoryId[]" class="label">Категория подписчиков</label>
                                <label class="input">
                                    <select name="categoryId[]" multiple="multiple" class="form-control custom-scroll" title="Выберите категорию">
                                        {% for o in category %}
                                            <option value="{{ o.id }}">{{ o.name }}</option>
                                        {% endfor %}
                                    </select>
                                </label>
                                {% if errors.categoryId %}
                                    <span class="text-danger">{{ errors.categoryId | first }}</span>
                                {% endif %}
                            </section>

                            <footer>
                                <button type="submit" class="btn btn-primary">
                                    Отправить
                                </button>
                                <button type="button" class="btn btn-default" onclick="window.history.back();">
                                    Назад
                                </button>
                            </footer>

                        </fieldset>

                        {{ csrf.field | raw }}

                    </form>



                </div>
            </div>
        </div>
    </div>

{% endblock %}