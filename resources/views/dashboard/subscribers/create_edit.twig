{% extends 'templates/app.twig' %}

{% block content %}

    <div class="row-fluid">
        <div class="col">

            <!-- Widget ID (each widget will need unique ID)-->
            <div class="jarviswidget jarviswidget-color-blueDark" data-widget-editbutton="false">

                <!-- widget div-->
                <div>

                    <form id="tmplForm"  action="{{ subscriber is defined ? path_for('admin.subscriber.update') : path_for('admin.subscriber.store') }}" method="{{ subscriber is defined ? 'put' : 'post' }}" class="smart-form">

                        {% if subscriber %}<input type="hidden" name="id" value="{{ subscriber.id }}">{% endif %}

                        <header>
                            *-обязательные поля
                        </header>

                        <fieldset>

                            <section>
                                <label for="name" class="label">Имя*</label>
                                <label class="input">
                                    <input type="text" maxlength="255" placeholder="Имя" name="name" value="{{ subscriber is defined ? subscriber.name  : _session.post.name }}" id="name">
                                </label>

                                {% if errors.name %}
                                    <span class="text-danger">{{ errors.name | first }}</span>
                                {% endif %}

                            </section>

                            <section>
                                <label for="name" class="label">Email*</label>
                                <label class="input">
                                    <input type="email" maxlength="255" placeholder="Email" name="email" value="{{ subscriber is defined ? subscriber.email  : _session.post.email }}" id="email">
                                </label>

                                {% if errors.email %}
                                    <span class="text-danger">{{ errors.email | first }}</span>
                                {% endif %}

                            </section>

                            <footer>
                                <button type="submit" class="btn btn-primary">
                                    Добавить
                                </button>
                                <button type="button" class="btn btn-default" onclick="window.history.back();">
                                    Назад
                                </button>
                            </footer>

                        </fieldset>

                        {{ csrf.field | raw }}

                    </form>

                </div>
            </div>
        </div>
    </div>

{% endblock %}

