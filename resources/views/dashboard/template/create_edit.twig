{% extends 'templates/app.twig' %}

{% block content %}

    <!-- START ROW -->
    <div class="row">

        <!-- NEW COL START -->
        <article class="col-sm-12 col-md-12 col-lg-12">

            <!-- Widget ID (each widget will need unique ID)-->
            <div class="jarviswidget" id="wid-id-0" data-widget-colorbutton="false" data-widget-editbutton="false"
                 data-widget-custombutton="false">
                <!-- widget options:
                usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                data-widget-colorbutton="false"
                data-widget-editbutton="false"
                data-widget-togglebutton="false"
                data-widget-deletebutton="false"
                data-widget-fullscreenbutton="false"
                data-widget-custombutton="false"
                data-widget-collapsed="true"
                data-widget-sortable="false"

                -->

                <!-- widget div-->
                <div>

                    <!-- widget edit box -->
                    <div class="jarviswidget-editbox">
                        <!-- This area used as dropdown edit box -->

                    </div>
                    <!-- end widget edit box -->

                    <!-- widget content -->
                    <div class="widget-body no-padding">

                        <form id="tmplForm" enctype="multipart/form-data"
                              action="{{ template is defined ? path_for('admin.template.update') : path_for('admin.template.store') }}"
                              method="post">

                            <div class="smart-form">
                                {{ csrf.field | raw }}

                                {% if template %}<input type="hidden" name="id" value="{{ template.id }}">{% endif %}

                                <header>
                                    *-{{ trans('form.required_fields') }}
                                </header>

                                <fieldset>

                                    <section>
                                        <label for="name" class="label">{{ trans('form.name') }}*</label>
                                        <label class="input">
                                            <input type="text" maxlength="255" placeholder="{{ trans('form.name') }}"
                                                   name="name"
                                                   value="{{ template is defined ? template.name : old.name }}"
                                                   id="name">
                                        </label>

                                        {% if errors.name %}
                                            <span class="text-danger">{{ errors.name | first }}</span>
                                        {% endif %}

                                    </section>

                                    <section>
                                        <label for="body" class="label">{{ trans('form.template') }}*</label>
                                        <label class="textarea textarea-resizable">
                                            <textarea rows="3" class="custom-scroll"
                                                      placeholder="{{ trans('form.template') }}" name="body"
                                                      id="body">{{ template is defined ? template.body : old.body }}</textarea>
                                        </label>
                                        {% if errors.body %}
                                            <span class="text-danger">{{ errors.body | first }}</span>
                                        {% endif %}

                                        <div class="note">
                                            {{ trans('note.personalization') }}
                                        </div>
                                    </section>

                                    <section>
                                        <label for="attachfile[]" class="label">{{ trans('form.attach_files') }}</label>
                                        <div class="input input-file">
                                            <span class="button"><input type="file" name="attachfile[]" id="attachfile"
                                                                        multiple="true"
                                                                        onchange="this.parentNode.nextSibling.value = this.value">{{ trans('form.browse') }}</span><input
                                                    type="text" placeholder="{{ trans('form.select_files') }}"
                                                    readonly="">
                                        </div>

                                        {% if errors.attachfile %}
                                            <span class="text-danger">{{ errors.attachfile | first }}</span>
                                        {% endif %}

                                    </section>

                                    <section>
                                        <label class="label">{{ trans('str.attachments') }}</label>
                                        <div class="inline-group">
                                            {% for a in attachment %}
                                                <span id="attach_{{ a.id }}">{{ a.file_name }} <a href="#"
                                                                                                  data-num="{{ a.id }}"
                                                                                                  class="remove_attach"
                                                                                                  title="{{ trans('str/remove') }}"> X </a>&nbsp;&nbsp;</span>
                                            {% endfor %}
                                        </div>
                                    </section>

                                    <section>
                                        <label for="prior" class="label">{{ trans('form.prior') }}</label>
                                        <div class="inline-group">
                                            <label class="radio">
                                                <input type="radio" name="prior"
                                                       value="3" {{ ((template is defined and (template.prior == 3 or old.prior == 3)) or (template is not defined)) ? 'checked="checked"' : '' }}>
                                                <i></i>{{ trans('form.normal') }}
                                            </label>
                                            <label class="radio">
                                                <input type="radio" name="prior"
                                                       value="2" {{ template is defined and (template.prior == 2 or old.prior == 2) ? 'checked="checked"' : '' }}>
                                                <i></i>{{ trans('form.low') }}
                                            </label>
                                            <label class="radio">
                                                <input type="radio" name="prior"
                                                       value="1" {{ template is defined and (template.prior == 1 or old.prior == 1) ? 'checked="checked"' : '' }}>
                                                <i></i>{{ trans('form.high') }}
                                            </label>

                                            {% if errors.prior %}
                                                <span class="text-danger">{{ errors.prior | first }}</span>jjj
                                            {% endif %}

                                        </div>

                                    </section>

                                </fieldset>

                                <footer>
                                    <button type="submit" class="btn btn-primary">
                                        {{ trans('form.send') }}
                                    </button>
                                    <a class="btn btn-default" href="{{ path_for('admin.category.index') }}">
                                        {{ trans('form.back') }}
                                    </a>
                                </footer>

                            </div>

                            <div class="well bg-color-blueLight">
                                <h3>{{ trans('str.send_test_letter') }}</h3>
                                <div class="input-group">

                                    <input class="form-control" name="email" id="email" type="text" placeholder="Email">
                                    <div class="input-group-btn">
                                        <button class="btn btn-default" id="send_test" type="button">
                                            <i class="fa fa-send"></i> {{ trans('str.send') }}
                                        </button>
                                    </div>
                                </div>
                            </div>

                        </form>

                    </div>
                    <!-- end widget content -->

                </div>
                <!-- end widget div -->

            </div>
            <!-- end widget -->

        </article>
        <!-- END COL -->

    </div>

    <!-- END ROW -->

{% endblock %}

{% block js %}

    <script src="{{ base_url() }}/js/plugin/ckeditor/ckeditor.js"></script>

    <script>

        $(document).ready(function () {
            CKEDITOR.replace('body', {height: '380px', startupFocus: true});

            $(document).on("click", ".remove_attach", function () {

                var idAttach = $(this).attr('data-num');

                var request = $.ajax({
                    url: '{{ path_for('admin.ajax.action') }}',
                    method: "POST",
                    data: {
                        action: "remove_attach",
                        id: idAttach,
                        csrf_name: "{{ csrf.attribute.name | raw }}",
                        csrf_value: "{{ csrf.attribute.value | raw }}",
                    },

                    dataType: "json"
                });

                request.done(function (data) {
                    if (data.result != null && data.result == true) {
                        $("#attach_" + idAttach).remove();
                    }
                });
            });

            $(document).on("click", "#send_test", function () {

                $("#div1").text($("#tmplForm").serialize());
                var arr = $("#tmplForm").serializeArray();
                var aParams = new Array();
                var sParam;

                for (var i = 0, count = arr.length; i < count; i++) {
                    sParam = encodeURIComponent(arr[i].name);
                    sParam += "=";
                    sParam += encodeURIComponent(arr[i].value);
                    aParams.push(sParam);
                }

                sParam = 'action';
                sParam += "=";
                sParam += encodeURIComponent('send_test_email');
                aParams.push(sParam);

                var sendData = aParams.join("&");

                var request = $.ajax({
                    url: '{{ path_for('admin.ajax.action') }}',
                    method: "POST",
                    data: sendData,
                    dataType: "json"
                });

                request.done(function (data) {
                    if (data.result != null && data.result == true) {
                        $("#attach_" + idAttach).remove();
                    }
                });


            });
        });

    </script>

{% endblock %}