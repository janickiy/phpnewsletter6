<!-- #BODY -->
<!-- Possible Classes

    * 'smart-style-{SKIN#}'
    * 'smart-rtl'         - Switch theme mode to RTL
    * 'menu-on-top'       - Switch to top navigation (no DOM change required)
    * 'no-menu'			  - Hides the menu completely
    * 'hidden-menu'       - Hides the main menu but still accessable by hovering over left edge
    * 'fixed-header'      - Fixes the header
    * 'fixed-navigation'  - Fixes the main menu
    * 'fixed-ribbon'      - Fixes breadcrumb
    * 'fixed-page-footer' - Fixes footer
    * 'container'         - boxed layout mode (non-responsive: will not work with fixed-navigation & fixed-ribbon)
-->
<body class="">

<!-- #HEADER -->
<header id="header">
    <div id="logo-group">

        <!-- PLACE YOUR LOGO HERE -->
        <span id="logo"> <img src="{{ base_url() }}/img/logo.png" alt="SmartAdmin"> </span>

    </div>


    <!-- #TOGGLE LAYOUT BUTTONS -->
    <!-- pulled right: nav area -->
    <div class="pull-right">

        <!-- collapse menu button -->
        <div id="hide-menu" class="btn-header pull-right">
            <span> <a href="javascript:void(0);" data-action="toggleMenu" title="Collapse Menu"><i class="fa fa-reorder"></i></a> </span>
        </div>
        <!-- end collapse menu -->

        <!-- #MOBILE -->
        <!-- Top menu profile link : this shows only when top menu is active -->
        <ul id="mobile-profile-img" class="header-dropdown-list hidden-xs padding-5">
            <li class="">
                <a href="#" class="dropdown-toggle no-margin userdropdown" data-toggle="dropdown">
                    <img src="{{ base_url() }}/img/avatars/sunny.png" alt="John Doe" class="online"/>
                </a>
                <ul class="dropdown-menu pull-right">
                    <li>
                        <a href="javascript:void(0);" class="padding-10 padding-top-0 padding-bottom-0" data-action="toggleShortcut"><i class="fa fa-arrow-down"></i> <u>Свернуть</u></a>
                    </li>
                    <li class="divider"></li>
                    <li>
                        <a href="javascript:void(0);" class="padding-10 padding-top-0 padding-bottom-0"
                           data-action="launchFullscreen"><i class="fa fa-arrows-alt"></i><u>Развренуть на весь экран</u></a>
                    </li>
                    <li class="divider"></li>
                    <li>
                        <a href="{{ path_for('signout') }}" class="padding-10 padding-top-5 padding-bottom-5" data-action="userLogout"><i class="fa fa-sign-out fa-lg"></i>
                            <strong><u>Выйти</u></strong></a>
                    </li>
                </ul>
            </li>
        </ul>

        <!-- logout button -->
        <div id="logout" class="btn-header transparent pull-right">
            <span> <a href="{{ path_for('signout') }}" title="Выйти" data-action="userLogout"><i class="fa fa-sign-out"></i></a> </span>
        </div>
        <!-- end logout button -->

        <!-- search mobile button (this is hidden till mobile view port) -->
        <div id="search-mobile" class="btn-header transparent pull-right">
            <span> <a href="javascript:void(0)" title="Search"><i class="fa fa-search"></i></a> </span>
        </div>
        <!-- end search mobile button -->


        <!-- fullscreen button -->
        <div id="fullscreen" class="btn-header transparent pull-right">
            <span> <a href="javascript:void(0);" data-action="launchFullscreen" title="Full Screen"><i class="fa fa-arrows-alt"></i></a> </span>
        </div>
        <!-- end fullscreen button -->

        <!-- multiple lang dropdown : find all flags in the flags page -->
        <ul class="header-dropdown-list hidden-xs">
            <li>
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <img src="{{ base_url() }}/img/blank.gif" class="flag flag-gb" alt="United States">
                    <span> English</span> <i class="fa fa-angle-down"></i> </a>
                <ul class="dropdown-menu pull-right">
                    <li class="active">
                        <a href="javascript:void(0);"><img src="{{ base_url() }}/img/blank.gif" class="flag flag-gb" alt="United States">English</a>
                    </li>
                    <li>
                        <a href="javascript:void(0);"><img src="{{ base_url() }}/img/blank.gif" class="flag flag-ru" alt="Russia">Русский язык</a>
                    </li>
                </ul>
            </li>
        </ul>
        <!-- end multiple lang -->

    </div>
    <!-- end pulled right: nav area -->

</header>
<!-- END HEADER -->

<!-- #NAVIGATION -->
<!-- Left panel : Navigation area -->
<!-- Note: This width of the aside area can be adjusted through LESS/SASS variables -->
<aside id="left-panel">

    <!-- User info -->
    <div class="login-info">
		<span> <!-- User image size is adjusted inside CSS, it should stay as is -->
			<span>
				{{ auth.user.name }}
			</span>
		</span>
    </div>
    <!-- end user info -->

    <!-- NAVIGATION : This navigation is also responsive

    To make this navigation dynamic please make sure to link the node
    (the reference to the nav > ul) after page load. Or the navigation
    will not initialize.
    -->
    <nav>
        <!--
        NOTE: Notice the gaps after each icon usage <i></i>..
        Please note that these links work a bit different than
        traditional href="" links. See documentation for details.
        -->

        <ul>
            <li {{ is_current_path('admin.main') ? ' class="active"' : '' }}>
                <a href="{{ path_for('admin.main') }}" title="Шаблоны">
                    <i class="fa fa-fw fa-envelope"></i> <span class="menu-item-parent">Шаблоны</span>
                </a>
            </li>

            <li {{ is_current_path('admin.template.create') ? ' class="active"' : '' }}>
                <a href="{{ path_for('admin.template.create') }}" title="Создать шаблон">
                    <i class="fa fa-fw fa-plus"></i> <span class="menu-item-parent">Создать шаблон</span>
                </a>
            </li>

            <li {{ is_current_path('admin.subscribers.index') ? ' class="active"' : '' }}>
                <a href="{{ path_for('admin.subscribers.index') }}" title="Подписчики">
                    <i class="fa fa-fw fa-users"></i> <span class="menu-item-parent">Подписчики</span>
                </a>
            </li>

            <li {{ is_current_path('admin.category.index') ? ' class="active"' : '' }}>
                <a href="{{ path_for('admin.category.index') }}" title="Категория подписчиков">
                    <i class="fa fa-fw fa-list"></i> <span class="menu-item-parent">Категория подписчиков</span>
                </a>
            </li>

            <li class="">
                <a href="#">
                    <i class="fa fa-fw fa-area-chart"></i> <span class="menu-item-parent">Логи</span>
                </a>

                <ul class="treeview-menu">
                    <li {{ is_current_path('admin.log.index') ? ' class="active"' : '' }}>
                        <a href="{{ path_for('admin.log.index') }}">
                            <i class="fa fa-fw fa-list"></i> <span class="menu-item-parent">Журнал рассылки</span>
                        </a>
                    </li>
                    <li {{ is_current_path('admin.log.index') ? ' class="active"' : '' }}>
                        <a href="{{ path_for('admin.log.index') }}">
                            <i class="fa fa-fw fa-list"></i> <span class="menu-item-parent">Статистика переходов по ссылкам</span>
                        </a>
                    </li>
                </ul>
            </li>

            <li {{ is_current_path('admin.settings.index') ? ' class="active"' : '' }}>
                <a href="{{ path_for('admin.settings.index') }}" title="Настройки">
                    <i class="fa fa-fw fa-list"></i> <span class="menu-item-parent">Настройки</span>
                </a>
            </li>

            <li {{ is_current_path('admin.users.index') ? ' class="active"' : '' }}>
                <a href="{{ path_for('admin.users.index') }}" title="Пользователи">
                    <i class="fa fa-fw fa-key"></i> <span class="menu-item-parent">Пользователи</span>
                </a>
            </li>

        </ul>
    </nav>

    <span class="minifyme" data-action="minifyMenu"> <i class="fa fa-arrow-circle-left hit"></i> </span>

</aside>
<!-- END NAVIGATION -->

<!-- #MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>Home</li>
        </ol>
        <!-- end breadcrumb -->


    </div>
    <!-- END RIBBON -->

    <!-- #MAIN CONTENT -->


    <!-- col -->
    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
        <h1 class="page-title txt-color-blueDark">

            <!-- PAGE HEADER -->

            Page Header
            <span>>
							Subtitle
						</span>
        </h1>

        {% include 'templates/partials/flash.twig' %}
        {% block content %}

        {% endblock %}

    </div>
    <!-- end col -->


    <!-- end row -->

    <!-- END #MAIN CONTENT -->

</div>
<!-- END #MAIN PANEL -->

<!-- #PAGE FOOTER -->
<div class="page-footer">
    <div class="row">
        <div class="col-xs-12 col-sm-6">
            <span class="txt-color-white">© 2006-{{ dateTime | date('Y') }} <a href="http:://janicky.com">PHP Newsletter</a>, Яницкий Александр</span>
        </div>
    </div>
    <!-- end row -->
</div>
<!-- END FOOTER -->


